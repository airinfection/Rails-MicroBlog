      <div class="row">
       <div class="col-md-4"></div>
        <div class="col-md-4">
            <% @posts.each do |post| %>
          <h3 class=""><%= post.title.html_safe %><br></h3>
          <p class=""><%= post.text.html_safe %></p>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Delete', post_path(post), method: :delete, data: {
      confirm: 'Are you sure to delete?'} %>
 <hr>
