    <div class="py-1">
    <div class="container">
      <div class="row">
      <div class="col-md-4"></div>
        <div class="col-md-4">
        <div class="alert alert-<%= key %>"><%= value %></div>      
        </div>
      </div>
    </div>
  </div>
 <% end %>
 
